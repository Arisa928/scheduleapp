<h3><%= @plan.title %></h3>
 
 <div>
   <ul>
     <li><%= link_to "ユーザー情報一覧に戻る", :plans %></li>
     <li><%= link_to "編集", [:edit, @plan] %></li>
   </ul>
 </div>
 
 <table>
   <tr>
     <th>開始日</th>
     <td><%= @plan.start_at.strftime('%Y/%m/%d') %></td>
   </tr>
   <tr>
     <th>終了日</th>
     <td><%= @plan.end_at.strftime('%Y/%m/%d') %></td>
   </tr>
   <tr>
     <th>終日</th>
     <td><% if @plan.allday==true %>
         ○
        <% else @plan.allday==false %>
        
        <% end %></td>
   </tr>
   <tr>
     <th>スケジュールメモ</th>
     <td><%= @plan.memo %></td>
   </tr>
 </table>
 